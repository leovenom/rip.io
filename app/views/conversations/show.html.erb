<h1 class="mt-5">Conversation with <%= @conversation.recipient(current_user).first_name %></h1>

<%= link_to 'All conversations', conversations_path %>

<% @conversation.messages.each do |message| %>
  <% if message.content %>
    <li>
      <h4><%= message.user.first_name %></h4>
      <p><%= message.content %></p>
    </li>
  <% end %>
<% end %>

<h3>Send new message</h3>
<%= form_for [@conversation, Message.new] do |f| %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Your message" %>
  </div>

  <%= f.submit "Send" %>
<% end %>
