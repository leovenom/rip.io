<div class="d-flex" style="width: 100vw">
  <div class="" style="width: 50%">
      <div class="index-form">
        <div class="search" style="padding-bottom: 0px; margin-top: 90px; margin-right: 40px; margin-left: 40px;">
          <form novalidate="novalidate" class="simple_form search " action="/attractions" accept-charset="UTF-8" method="get"><input name="utf8" type="hidden" value="&#x2713;" />
            <div id="show-form" class="search-form-control form-group" style="opacity: 0.9">
            <input class="form-control string required" type="text" name="search[query]" id="search_query" />
            <button name="button" type="submit" class="btn btn-outline-secondary">
            <i class="fas fa-search"></i> Ripio Search
            </button>
            </div>
          </form>
        </div>
      </div>
      <div class="cards" style="padding-left: 50px; padding-right: 50px;">
        <% @attractions.each do |attract| %>
          <%= link_to attraction_path(attract) do %>
        <div class="card-category">
          <div class="d-flex justify-content-sm-center flex-column">
            <h5 class="card-title"><%= attract.name %></h5>
            <p class="card-text"><%= attract.address %></p>
            <p class="card-text"><%= attract.description %></p>
          </div>
        </div>
          <% end %>
        <% end %>
      </div>
  </div>
  <div class="" style="width: 50%">
      <div
      id="map"
      style="width: 100%;
      height: 600px;
      margin-top: 37px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
      z-index: 0;
    >
  </div>
</div>


