<div class="d-flex" style="width: 99%">
  <div class="" style="width: 50%">
      <div class="index-form">
        <div class="search" style="padding-bottom: 0px; margin-top: 90px; margin-right: 40px; margin-left: 40px;">
          <form novalidate="novalidate" class="simple_form search " action="/attractions" style="padding-bottom: 10px;" accept-charset="UTF-8" method="get"><input name="utf8" type="hidden" value="&#x2713;" />
            <div id="show-form" class="search-form-control form-group" style="opacity: 0.9">
            <input class="form-control string required" type="text" name="search[query]" id="search_query" />
            <button name="button" type="submit" class="btn btn-outline-secondary">
            <i class="fas fa-search"></i> Ripio Search
            </button>
            </div>
          </form>
        </div>
      </div>
      <div class="cards" style="padding-left: 50px; padding-right: 50px;">
        <% @attractions.each do |attract| %>
          <%= link_to attraction_path(attract) do %>
        <div class="card-product">
            <% if attract.photos.attached? %>
            <%= cl_image_tag (attract.photos.first.key), class:"card-img-top"%>
            <% end %>
          <div class="card-product-infos">
            <h5 id="index-title" class="card-title"><%= attract.name %></h5>
            <p class="card-text"><%= attract.address %></p>
            <p class="card-text"><%= attract.description %></p>
          </div>
          <a href="#" class="location_btn" data-latitude="<%= attract.latitude %>" data-logitude="<%= attract.longitude %>" data-image="<%= asset_url('rip-round-blue-50px.svg') %>" data-info="<%= attract.description %>">Butao</a>
        </div>
          <% end %>
        <% end %>
        <% @personalities.each do |personality| %>
          <%= link_to personality_path(personality) do %>
        <div class="card-product">
            <% if personality.photos.attached? %>
            <%= cl_image_tag (personality.photos.first.key), class:"card-img-top"%>
            <% end %>
          <div class="card-product-infos">
            <h5 id="index-title" class="card-title"><%= personality.name %></h5>
            <p class="card-text"><%= personality.address %></p>
            <p class="card-text"><%= personality.description %></p>
            <p class="card-text"><%= personality.text %></p>
          </div>
          <a href="#" class="location_btn" data-latitude="<%= personality.latitude %>" data-logitude="<%= personality.longitude %>" data-image="<%= asset_url('death-round-blue-50px.svg') %>" data-info="<%= personality.description %>">Butao</a>
        </div>
          <% end %>
        <% end %>
      </div>
  </div>
  <div class="" style="width: 50%">
      <div
      id="map"
      style="width: 99%;
      height: 600px;
      margin-top: 88px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    >
  </div>
  </div>
</div>


