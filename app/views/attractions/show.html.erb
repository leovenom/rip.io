<div class="container justify-content-center pt-5">
    <% @attraction %>

      <div class="banner mr-5" style="width: 100%;">
        <% if @attraction.photos.attached? %>

        <%= cl_image_tag (@attraction.photos.first.key), class:"card-img-top-banner" %>
        <% end %>
      </div>

    <div class="row justify-content-center">
        <div class="" style="width: 100%;">
          <div class="card-body" style="padding-left: 12px;">
            <h5 class="card-title">
              <%= @attraction.name %>
            </h5>
              <%= @attraction.address %>
            </h6>
            <p class="card-text">
              Description:
              <%= @attraction.description %>
            </p>
            <p class="card-text">
              text:
              <%= @attraction.text %></p>
          </div>
        </div>
    </div>
</div>
<%= render 'shared/card-guide' %>
<%= render "shared/footer" %>
