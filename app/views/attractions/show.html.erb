<div class="container justify-content-center pt-5">
  <% @attraction %>

  <div class="banner mr-5" style="width: 100%;">
    <% if @attraction.photos.attached? %>

    <%= cl_image_tag (@attraction.photos.first.key), class:"card-img-top-banner" %>
    <% end %>
  </div>
  <div class="d-flex min-vw-80">
    <div class="row justify-content-center min-width-card">
      <div class="card-body">
        <h5 class="card-title">
          <%= @attraction.name %>
        </h5>
        <%= @attraction.address %>
      <p class="card-text">
        Description:
        <%= @attraction.description %>
      </p>
      <p class="card-text">
        Text:
        <%= @attraction.text %></p>
      </div>
    </div>
    <%= render 'shared/card-guide' %>

  </div>

</div>
<%= render "shared/footer" %>
