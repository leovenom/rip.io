<div class="container justify-content-center pt-5">
  <% @personality %>

  <div class="banner mr-5" style="width: 100%;">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner" style="height: 580px; object-fit: cover;">
    <% if @personality.photos.attached? %>
    <% @personality.photos.each_with_index do |attract, indx| %>
    <div class="carousel-item <%= indx.zero? ? "active" : "" %> ">


      <%= cl_image_tag (attract.key), class:"d-block w-100"%>
    </div>
    <% end %>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
  </div>
  </div>
  <div class="d-flex min-vw-80">
    <div class="row justify-content-center min-width-card">
      <div class="card-body" id="card-body-show">
        <h5 class="card-title">
          <%= @personality.name %>
        </h5>
        <p class="card-text">
          <%= @personality.death_date %>
        </p>
          <%= @personality.address %>
        <p class="card-text">
          <%= @personality.description %>
        </p>
        <p class="card-text">
          <%= @personality.text %></p>
      </div>
    </div>
  </div>

</div>
<%= render "shared/footer" %>


