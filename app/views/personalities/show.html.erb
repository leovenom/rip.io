<div class="container justify-content-center pt-5">
  <% @personality %>

  <div class="banner mr-5" style="width: 100%;">
    <% if @personality.photos.attached? %>

    <%= cl_image_tag (@personality.photos.first.key), class:"card-img-top-banner" %>
    <% end %>
  </div>
  <div class="d-flex min-vw-80">
    <div class="row justify-content-center min-width-card">
      <div class="card-body">
        <h5 class="card-title">
          <%= @personality.name %>
        </h5>
        <%= @personality.address %>
      </h6>
      <p class="card-text">
        Description:
        <%= @personality.description %>
      </p>
      <p class="card-text">
        Text:
        <%= @personality.text %></p>
      </div>
    </div>
    <%= render 'shared/card-guide' %>
  </div>

</div>
<%= render "shared/footer" %>
