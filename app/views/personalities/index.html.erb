<div class="page-wrapper chiller-theme toggled">
  <a id="show-sidebar" class="btn btn-sm btn-dark" href="#" onclick="openNav()">
    <i class="fas fa-cross"></i>
  </a>

  <div id="mySidepanel" class="sidepanel">
    <div class="index-form">
      <div class="search col-xs-10 col-sm-10 col-md-6 col-lg-6">
        <form novalidate="novalidate" class="simple_form search " action="/attractions" accept-charset="UTF-8" method="get"><input name="utf8" type="hidden" value="&#x2713;" />
          <div id="show-form" class="search-form-control form-group">
            <input class="form-control string required rounded-pill" type="text" name="search[query]" id="search_query" />
            <button name="button" type="submit" class="btn btn-outline-secondary btn-sm rounded-pill">
              <i class="fas fa-search"></i> Ripio Search
            </button>
          </div>
        </form>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-10 col-sm-10 col-md-6 col-lg-6">
        <div class="d-flex justify-content-between ml-4 mt-4">
          <%= render 'shared/card-location'  %>
        </div>

      </div>
      <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
    </div>
  </div>



<script>
  function openNav() {
  document.getElementById("mySidepanel").style.width = "550px";
};

/* Set the width of the sidebar to 0 (hide it) */
function closeNav() {
  document.getElementById("mySidepanel").style.width = "0";
};
</script>

<div
  id="map"
  style="width: 100%;
  height: 700px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  z-index: 0;
></div>

