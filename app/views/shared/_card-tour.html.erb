              <h2><%= tour.name %></h2>
            </h5>

            <p><%= tour.description %></p>
            <p class="card-text"></p>
            </div>
              <p class="card-text">

              <h2 class="card-trip-pricing">â‚¬<%= tour.price %></h2>


              <%= link_to "See details", attraction_tour_path(@attraction, tour), class: "btn btn-primary" %>
