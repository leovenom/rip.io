<div class="container col-lg-10">
  <div class="row align-items-stretch justify-content-around">
      <% @attractions.each do |attract| %>

      <div id="home-card" class="card">
        <%= link_to attraction_path(attract) do %>
        <% if attract.photos.attached? %>

        <%= cl_image_tag (attract.photos.first.key), class:"card-img-top"%>
                <% end %>
<!--         <img class="card-img-top" src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" alt="Card image cap">
 -->        <div id="home-body" class="card-body">
          <h5 class="card-title"><%= attract.name %></h5>
            <p class="card-text"><%= attract.address %></p>
            <p class="card-text"><%= attract.description %></p>
        </div>
      </div>
        <% end %>
        <% end %>
     </div>
 </div>
