<div class="container mt-5">
  <h3>Attractions</h3>
  <div class="row justify-content-around align-items-center ">
    <% @attractions.each do |attract| %>
      <div id="home-card" class="card">
        <%= link_to attraction_path(attract) do %>
          <% if attract.photos.attached? %>
            <%= cl_image_tag (attract.photos.first.key), class:"card-img-top"%>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= attract.name %></h5>
            <p class="card-text"><%= attract.address %></p>
            <p class="card-text"><%= attract.description %></p>
          </div>
      </div>
        <% end %>
    <% end %>
  </div>
</div>

<div class="container">
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner col-md-4">
    <% @attractions.each_with_index do |attract, ix| %>
      <div class="carousel-item <%= ix.zero? ? "active" : "" %>">

        <div id="home-card" class="d-block card">
          <%= link_to attraction_path(attract) do %>
            <% if attract.photos.attached? %>
              <%= cl_image_tag (attract.photos.first.key), class:"card-img-top"%>
            <% end %>
            <div class="card-body">
              <h5 class="card-title"><%= attract.name %></h5>
              <p class="card-text"><%= attract.address %></p>
              <p class="card-text"><%= attract.description %></p>
            </div>
        </div>
          <% end %>

      </div>
    <% end %>

  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
</div>
