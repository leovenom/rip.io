<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">
  <%= link_to root_path, class: "navbar-brand" do %>
  <%= image_tag "https://image.flaticon.com/icons/svg/1644/1644464.svg" %>
  <div><a id="title" title="ripio"></a></div>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <div class="the-blur"></div>
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
      <li class="nav-item active">
        <%= link_to "Home", root_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Messages ", "#", class: "nav-link" %>
      </li>
      <li class="nav-item dropdown">
        <% if current_user.profile_picture.attached? %>
        <%= cl_image_tag current_user.profile_picture.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% end %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Profile", profile_path, class: "dropdown-item" %>
          <%= link_to "My Bookings", my_bookings_path, class: "dropdown-item" %>
          <%= link_to "Add Attractions", new_attraction_path, class: "dropdown-item" %>
          <%= link_to "My Attractions", my_attractions_path, class: "dropdown-item" %>
          <% if current_user.role == 'user' %>
          <%= link_to "Be a Guide", '/be_a_guide', class: "dropdown-item"  %>
          <% end %>
          <%= link_to "Add Personality", new_personality_path, class: "dropdown-item" %>
          <%= link_to "My Personalities", my_personalities_path, class: "dropdown-item" %>
          <%= link_to "My Tours", "#", class: "dropdown-item" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>
      <% else %>
      <li class="nav-item">
        <%= link_to "Login", new_user_session_path, class: "nav-link" %>
      </li>
      <% end %>
    </ul>
  </div>
</div>
